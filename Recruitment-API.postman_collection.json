{
  "info": {
    "_postman_id": "d2a8f3c4-9b2d-4e6a-a111-123456789abc",
    "name": "Recruitment Management API",
    "description": "Postman collection for Recruitment Management API (Auth, Candidates, Screening, Reports)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register Recruiter",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Recruiter One\",\n  \"email\": \"recruiter@test.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login Recruiter",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "pm.environment.set(\"token\", json.token);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"recruiter@test.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Candidates",
      "item": [
        {
          "name": "Create Candidate",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@test.com\",\n  \"skills\": [\"Node.js\", \"MongoDB\", \"Express\"],\n  \"experience\": 3\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/candidates",
              "host": ["{{baseUrl}}"],
              "path": ["api", "candidates"]
            }
          }
        },
        {
          "name": "Get Candidates (Search & Pagination)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/candidates?search=node&page=1&limit=5",
              "host": ["{{baseUrl}}"],
              "path": ["api", "candidates"],
              "query": [
                { "key": "search", "value": "node" },
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "5" }
              ]
            }
          }
        },
        {
          "name": "Update Candidate",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"experience\": 4\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/candidates/{{candidateId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "candidates", "{{candidateId}}"]
            }
          }
        },
        {
          "name": "Upload Resume",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "resume",
                  "type": "file"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/candidates/{{candidateId}}/resume",
              "host": ["{{baseUrl}}"],
              "path": ["api", "candidates", "{{candidateId}}", "resume"]
            }
          }
        }
      ]
    },
    {
      "name": "Screening",
      "item": [
        {
          "name": "Score Candidate",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/screening/{{candidateId}}/score",
              "host": ["{{baseUrl}}"],
              "path": ["api", "screening", "{{candidateId}}", "score"]
            }
          }
        },
        {
          "name": "Get Shortlisted Candidates",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/screening/shortlist?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "screening", "shortlist"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Hiring Pipeline Report",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/reports/hiring-pipeline",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reports", "hiring-pipeline"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "candidateId",
      "value": ""
    }
  ]
}
